{
  "name": "bookkeeping-server",
  "version": "1.0.0",
  "description": "Express.js backend server for the Bookkeeping Application - handles PDF processing, transaction management, and financial reporting",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js --ignore uploads/ --ignore test/",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration",
    "test:services": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/unit/services",
    "test:utils": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/unit/utils",
    "test:api": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration/api",
    "test:verbose": "VERBOSE_TESTS=true node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:emulator": "USE_EMULATOR=true node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:emulator:integration": "USE_EMULATOR=true node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration",
    "emulator:start": "firebase emulators:start --only firestore,auth,storage",
    "emulator:start:ui": "firebase emulators:start",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "migrate": "node scripts/migrate_uploads_metadata.js",
    "create-company": "node scripts/create-new-company.mjs",
    "clean": "rimraf uploads/*.pdf && rimraf uploads/*.tmp",
    "docs": "jsdoc -c jsdoc.conf.json",
    "health": "curl -f http://localhost:5000/health || exit 1"
  },
  "keywords": [
    "bookkeeping",
    "finance",
    "pdf-processing",
    "express",
    "firebase",
    "tax-categories",
    "accounting"
  ],
  "author": "BookkeepingApp Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "canvas": "^3.1.1",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.12",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.3.31",
    "pdfkit": "^0.14.0",
    "puppeteer": "^21.6.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pg": "^8.16.3",
    "supertest": "^6.3.3"
  }
}
